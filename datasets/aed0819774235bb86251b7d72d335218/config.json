{
  "model": "Tacotron2",
  "output_path": "./output/",
  "dataset": {
    "formatter": "ljspeech",
    "path": "./converted/",
    "meta_file_train": "./converted/metadata_train.csv",
    "meta_file_val": "./converted/metadata_val.csv"
  },
  "batch_size": 4,
  "learning_rate": 0.001,
  "epochs": 50,
  "mixed_precision": true,
  "text_cleaners": ["english_cleaners"],
  "sampling_rate": 16000,
  "optimizer": {
    "type": "adam",
    "params": {
      "lr": 0.001
    }
  },
  "lr_scheduler": {
    "type": "NoamLR",
    "params": {
      "warmup_steps": 4000
    }
  },
  "trainer": {
    "grad_clip": 1.0,
    "accumulate_grad_batches": 2,
    "log_every_n_steps": 10
  }
}
